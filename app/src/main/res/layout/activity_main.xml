<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        tools:context="com.example.admin.chillaxguide.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:textColor="#01579B"
            android:text="Welcome to the"
            android:gravity="center_horizontal"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="#01579B"
            android:text="Chillax Guide"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:textStyle="bold"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/picone"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/imageView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="#01579B"
                android:text="Now you can drink your favorite drink at the place of your choice"
                android:textSize="14sp"
                android:textStyle="italic"
                android:id="@+id/textView" />


        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="ViewPlaces"
            android:layout_gravity="center_horizontal"
            android:text="View Places"/>

    </LinearLayout>
    </ScrollView>